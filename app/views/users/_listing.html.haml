%tr{ id: "row-#{user.id}" }
	%td.item-check{style:"width: 10%"}
		= link_to "", user_path(user), remote: true, class: "show-row"
		= lumx_checkbox_tag(id: "checkbox#{user.id}") do 
			= icon(:"account")
	%td{style:"width: 30%"}
		= link_to "", user_path(user), remote: true, class: "show-row"
		%span
			= user.name											
	%td.hidden-xs{style:"width: 40%"}
		= link_to "", user_path(user), remote: true, class: "show-row"
		%span
			= user.email			 
	%td{style:"width: 30%"}
		= link_to "", user_path(user), remote: true, class: "show-row"
		%span
			= user.role	
	%td{style:"width: 30%"}		
		= link_to user_path(user), class: "btn-floating waves-effect btn-flat" do
			= material_icon.md_24.more_horiz.css_class("md-dark")