	%td{style:"width: 5%"}
		= link_to admin_category_shops_path(category), class: "btn-floating waves-effect btn-flat" do
			= material_icon.md_24.store.css_class("md-dark")
	- if can? :update, Category
		%td{style:"width: 5%"}
			= link_to edit_admin_category_path(category), class: "right btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" =>t("keppler.actions.edit") do
				= material_icon.md_18.create.css_class("md-dark")
	- if can? :delete, Category
		%td{style:"width: 5%"}
			= link_to admin_category_path(category), class: "btn-floating btn-flat right tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.delete"), method: :delete, data: { confirm: "¿Estás seguro?" } do
