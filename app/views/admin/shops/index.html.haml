= title(t('keppler.titles.index', model: "Shops"))
.listing.col.l9.m12.s12
	- if can? :new, model
		= link_to new_admin_category_shop_path(@category_shop), class: "btn-floating btn-large waves-effect waves-light btn-new hide-on-small-only" do
			= material_icon.md_24.add
	= entries(@total, @objects)

	= link_to admin_categories_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
		= material_icon.md_18.arrow_back.css_class("md-dark")
		
	%table.bordered
		%tbody
			- @objects.each do |shop|
				= render 'listing', shop: shop
			- if @objects.size.zero?
				%tr
					%td{colspan: "4"}
						%center
							= t('keppler.messages.not_found_records', model:  t("keppler.models.pluralize.shops"))
	= paginate @objects, window: 1

.listing-show.col.l3.m12.hide-on-small-and-down.hide-on-med-and-down
	= render "description"
