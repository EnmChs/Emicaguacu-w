.listing-show-header
	.actions
		- if can? :update, Shop
			= link_to edit_admin_category_shop_path(@category_shop,@shop), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-image
	.card-content
		%ul.list
			%li.list-row
				.display-label= t("activerecord.attributes.shop.brand")
				.display-value= image_tag @shop.brand
			%li.list-row
				.display-label= t("activerecord.attributes.shop.header")
				.display-value= image_tag @shop.header
			%li.list-row
				.display-label= t("activerecord.attributes.shop.name")
				.display-value= @shop.name
			%li.list-row
				.display-label= t("activerecord.attributes.shop.category_id")
				.display-value= @category_shop.name
			%li.list-row
				.display-label= t("activerecord.attributes.shop.address")
				.display-value= @shop.address
			%li.list-row
				.display-label= t("activerecord.attributes.shop.description")
				.display-value= @shop.description
			%li.list-row
				.display-label= t("activerecord.attributes.shop.email")
				.display-value= @shop.email
			%li.list-row
				.display-label= t("activerecord.attributes.shop.phone_one")
				.display-value= @shop.phone_one
			%li.list-row
				.display-label= t("activerecord.attributes.shop.phone_two")
				.display-value= @shop.phone_two
			%li.list-row
				.display-label= t("activerecord.attributes.shop.facebook")
				.display-value= @shop.facebook
			%li.list-row
				.display-label= t("activerecord.attributes.shop.instagram")
				.display-value= @shop.instagram
			%li.list-row
				.display-label= t("activerecord.attributes.shop.twitter")
				.display-value= @shop.twitter
			%li.list-row
				= link_to t('keppler.actions.back_history'), admin_category_shops_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
