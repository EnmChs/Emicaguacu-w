= title(t('keppler.titles.show', model: "Albums"))
.wrapper
	.wrapper-body.container
		.actions
			- if can? :delete, Album
				= link_to admin_album_path(@album), class: "btn-floating btn-flat right tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.delete"), method: :delete, data: { confirm: t("keppler.messages.data_confirm") } do
					= material_icon.md_18.delete.css_class("md-dark")
			- if can? :update, Album
				= link_to edit_admin_album_path(@album), class: "right btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" =>t("keppler.actions.edit") do
					= material_icon.md_18.create.css_class("md-dark")
			= link_to admin_albums_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.card
			.card-content
				%ul.list
					%li.list-row
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.cover")
						.display-value.fs-body-1.tc-black-2= image_tag @album.cover
					%li.list-row
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.title")
						.display-value.fs-body-1.tc-black-2= @album.title.to_s.humanize
