.wrapper
	.wrapper-body.container
		.actions
			= link_to admin_albums_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.wrapper-inputs
			.card
				.card-content
					= simple_form_for [:admin, @album] do |f|
						.row
							= f.input :cover, :as => :file_material, label: false, wrapper_html: { class: "file-field" }
							= f.input :title

							.form-actions.right
								= f.button :submit, "Guardar", name: '_save'
								= f.button :submit, "Guardar y agregar otro", name: '_add_other'
