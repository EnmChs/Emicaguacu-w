	- if can? :update, Album
		%td{style:"width: 5%"}
			= link_to edit_admin_album_path(album), class: "right btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" =>t("keppler.actions.edit") do
				= material_icon.md_18.create.css_class("md-dark")
	- if can? :delete, Album
		%td{style:"width: 5%"}
			= link_to admin_album_path(album), class: "btn-floating btn-flat right tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.delete"), method: :delete, data: { confirm: "¿Estás seguro?" } do
				= material_icon.md_18.delete.css_class("md-dark")
