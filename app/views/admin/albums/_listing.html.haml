%tr{ id: "row-#{album.id}" }
	- if can? :destroy_multiple, Album
		%td.item-check{style:"width: 10%"}
			= link_to "", admin_album_path(album), remote: true, class: "show-row"
			%input{ type:"checkbox", class: "filled-in", id: "checkbox-#{album.id}", 'checklist-model'=>"check", 'checklist-value'=>"#{album.id}", "ng-click"=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{album.id}" }

	%td{style:"width: 30%"}
		= link_to "", admin_album_path(album, search: @query), remote: true, class: "show-row"
		%span
			= image_tag album.cover, style:"height:50px"
	%td{style:"width: 30%"}
		= link_to "", admin_album_path(album, search: @query), remote: true, class: "show-row"
		%span
			= album.title
	%td{style:"width: 5%"}
		= link_to admin_album_photos_path(album), class: "btn-floating waves-effect btn-flat" do
			= material_icon.md_24.library_add.css_class("md-dark")
