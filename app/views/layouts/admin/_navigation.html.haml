.navbar-fixed{ "ng-style" => is_index? ? "{'max-width':'75%'}" : "{'min-width':'100%'}" }
	%nav{ "ng-style" => is_index? ? "{'max-width':'75%'}" : "{'min-width':'100%'}" }
		.nav-wrapper			
			%a.brand-logo.switch.animated{ "ng-click" => "sidebarSwitch()", class: "btn-floating waves-effect waves-light btn-flat switch-{{sidebar}}" }
				%i.material-icons.md-24.animated menu
			%a.brand-logo.title.hide-on-small-only.hide-on-med-and-down
				Keppler
			.actions.right				
				- if is_index?
					=link_to "", { "ng-click" => "searchSiwtch()", class: "btn-floating waves-effect waves-light btn-flat" } do
						= material_icon.md_24.search

					= link_to destroy_multiple_users_path.concat("?multiple_ids={{check}}&page=#{params[:page]}&search=#{@query}"), method: :delete, class: "btn-floating waves-effect waves-light btn-flat tooltipped", "ng-click" => "", "ng-show"=> "btnDelete", "data-position" => "bottom", "data-tooltip" => "Eliminar"  do
						= material_icon.md_24.delete

					%a{class: "btn-floating waves-effect waves-light btn-flat tooltipped", "ng-click" => "select(#{@users.to_json}, 'btn')", "data-position" => "bottom", "data-tooltip" => "{{tooltipCheck}}"}
						%i.mi.md-24 {{iconCheck}}

					= link_to users_path(params[:page], search: @query), class: "btn-floating waves-effect waves-light btn-flat spinner-refresh tooltipped", "ng-click" => "spinnerReload()", "data-position" => "bottom", "data-tooltip" => "Recargar"  do
						= material_icon.md_24.refresh
				= link_to "#", class: "btn-floating waves-effect waves-light btn-flat dropdown-button", "data-activates" => 'more-options' do
					= material_icon.md_24.more_vert
				%ul{ id: "more-options", class: "dropdown-content" }
					%li
						= link_to "Ir a la web", main_app.root_path
					%li
						= link_to "Editar perfil", main_app.edit_user_path(current_user)
					%li.divider
					%li
						= link_to 'Cerrar Sesi√≥n', main_app.destroy_user_session_path