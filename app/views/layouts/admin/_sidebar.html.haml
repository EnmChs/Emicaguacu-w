%pageslide.card{ "ps-open"=>"sidebar", "ps-auto-close" => true }
  .profile-menu.bgc-red-500
    .profile-pic
      = image_tag "#{(request.ssl? ? 'https://secure' : 'http://www')}.gravatar.com/avatar/#{Digest::MD5.hexdigest current_user.email}?s=60", class: "avatar"
    .profile-info
      = current_user.name
  %ul.pageslide-menu.collapsible{"data-collapsible" => "accordion"}
    %li
      = link_to dashboard_admin_index_path, class: "collapsible-header #{'current' if controller_name == 'admin' }" do
        = material_icon.md_18.dashboard
        Dashboard
    %li
      .collapsable.collapsible-header
        = material_icon.md_18.local_library
        Blog
      .collapsible-body
        %ul.pageslide-sub-menu
          %li
            = link_to "Posts", "#", class: "current"
          %li
            = link_to "Categor√≠as", "#" 
    %li
      = link_to users_path, class: "collapsible-header #{'current' if controller_name == 'users' }" do
        = material_icon.md_18.person
        Usuarios
