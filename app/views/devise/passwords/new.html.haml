.devise
  .authform.container     
    .devise-box.card
      .devise-box-header
        .title-app Keppler
      .devise-box-body
        = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f|
          %h5 ¿Haz olvidado tu contraseña?
          %p Envianos tu email para darle las instrucciones a seguir.
          .form-group
            .row
              .input-field.col.s12
                = f.email_field :email, :autofocus => true, class: "validate"
                %label{for: "email"} Email
                .devise-errors 
                  - resource.errors.each do |name, msg|
                    = msg.capitalize
          = lumx_flex_container("row") do  
            = lumx_flex_item(12, 2) do 
              = f.submit 'Enviar', :class => 'pull-right btn '
        .clearfix