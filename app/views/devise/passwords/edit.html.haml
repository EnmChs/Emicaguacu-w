.devise
  .authform.container     
    .devise-box.card
      .devise-box-header{class: "p+"}
        .title-app Keppler
      .devise-box-body{class: "p+"}
        = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
          %h3 Cambia tu contrase単a
          = f.hidden_field :reset_password_token
          .form-group
            = lumx_textfield("Nueva Contrase単a") do
              = f.password_field :password, autofocus: true, autocomplete: 'off', "ng-model" => "changePass.password"
            .devise-errors
              = resource.errors.messages[:password][0]  
            = lumx_textfield("Confirmar Contrase単a") do
              = f.password_field :password_confirmation, autocomplete: 'off', "ng-model" => "changePass.password_confirmation"
            .devise-errors
              = resource.errors.messages[:password_confirmation][0]
          = lumx_flex_container("row") do  
            = lumx_flex_item(12, 2) do
              = f.submit 'Cambiar contrase単a', :class => 'pull-right btn btn--m btn--red btn--raised'
            %br
            %br
          = image_tag "admin/inyxtech.png", class: "devise-logo hidden-xs" 
        .clearfix